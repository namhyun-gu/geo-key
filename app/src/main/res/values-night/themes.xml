<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KeyMap.DayNight" parent="Theme.KeyMap.Dark" />

    <style name="Theme.KeyMap.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Color -->
        <item name="colorPrimary">@color/keymap_blue_200</item>
        <item name="colorPrimaryVariant">@color/keymap_blue_300</item>
        <item name="colorSecondary">@color/keymap_orange_300</item>
        <item name="colorSecondaryVariant">@color/keymap_orange_300</item>

        <item name="android:colorBackground">@color/keymap_black_900</item>
        <item name="colorSurface">@color/keymap_black_800</item>
        <item name="colorError">@color/keymap_red_200</item>

        <item name="colorOnPrimary">@color/keymap_black_900</item>
        <item name="colorOnSecondary">@color/keymap_black_900</item>
        <item name="colorOnBackground">@color/keymap_white_50</item>
        <item name="colorOnSurface">@color/keymap_white_50</item>
        <item name="colorOnError">@color/keymap_black_900</item>

        <item name="scrimBackground">@color/keymap_black_900_alpha_087</item>
        <item name="android:statusBarColor">@color/keymap_black_900_alpha_060</item>

        <item name="elevationOverlayEnabled">true</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>

        <!-- System attributes -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>